generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  password        String
  refreshToken    String?
  isEmailVerified Boolean  @default(false)  // âœ… Add this line
  createdAt       DateTime @default(now())
}



model Document {
  id            Int       @id @default(autoincrement())
  title         String
  description   String
  author        String
  publishedYear Int
  publisher     String?
  referenceLink String?
  cloudinaryUrl String
  createdAt     DateTime   @default(now())
  tags          Tag[]
}


model Tag {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  documents Document[] // inverse side of many-to-many
}
